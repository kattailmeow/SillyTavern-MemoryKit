{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2020",
    "moduleResolution": "node",
    "rootDir": "src",
    "outDir": ".tsbuild",
    "noEmit": false,
    "types": ["node"],
    "typeRoots": ["./node_modules/@types","../../node_modules/@types"],
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", ".tsbuild"]
}